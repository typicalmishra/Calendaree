block content
    main.main.main-div-in-dashboard
        table.table-for-product
            thead
                tr
                th #
                th Name
                th Description
                //- th Status
                th Users Allowed
                th No. Of Flats
                th No. Of Transactions
                th Data Allowed
                th Price
                th 
            tbody
                for product,index in Products
                    if (product.status == "Active")
                        tr
                            td #{index+1}
                            td #{product.name}
                            td #{product.detail}
                            td #{product.users}
                            td #{product.flat}
                            td #{product.transcations}
                            td #{product.data_size}
                            td #{product.price}
                            td    
                                a(href='/order/'+ idOfCalendar +"?id=" + product._id  ).anchor-tag-for-buying-product  Buy 
