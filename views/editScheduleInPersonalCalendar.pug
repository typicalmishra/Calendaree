    title  Edit Schedule
block content
    section.add-schedule-form-section
      div.div-having-heading-and-date
        h1.add-schedule-heading Edit Schedule
        h2.add-schedule-date #{formattedDate}
      form( action='/editSchedule/'+ date + "/" + idOfPersonalSchedule, method='post' enctype="multipart/form-data").form-inside-add-schedule
        div.div-containing-inputs
          input.inputs-of-security-form-page.input-start-time(type='time' value=individualScheduleWhichNeedsToBeEdited.start  name='start' placeholder='From:' required)
          input.inputs-of-security-form-page.input-end-time(type='time' placeholder='To:' value=individualScheduleWhichNeedsToBeEdited.end name='end' required)
        div.div-containing-inputs
          input#name-of-visitor.inputs-of-security-form-page(type='text' name="heading" placeholder='Schedule Heading' value=individualScheduleWhichNeedsToBeEdited.heading)
        div.div-containing-inputs
          input#name-of-visitor.inputs-of-security-form-page(type='text' value=individualScheduleWhichNeedsToBeEdited.description name="description" placeholder='Schedule Description')
        .div-containing-inputs
          input.inputs-of-security-form-page( type='file' value=individualScheduleWhichNeedsToBeEdited. documentImageInScheduleOrAppointment name="documentImageInScheduleOrAppointment"  accept='image/*' capture='camera' title=" This is title" )
        .div-having-save-visitor-details-button
          button(type="submit" ).save-btn Save Edit 
